apiVersion: apps.openshift.io/v1
kind: DeploymentConfig
spec:
  replicas: 1
  revisionHistoryLimit: 10
  selector:
    app: southerncoalition
    deploymentconfig: southerncoalition
#  strategy:
#    activeDeadlineSeconds: 21600
#    resources: {}
#    rollingParams:
#      intervalSeconds: 1
#      maxSurge: 25%
#      maxUnavailable: 25%
#      timeoutSeconds: 600
#      updatePeriodSeconds: 1
#    type: Rolling
  strategy:
    activeDeadlineSeconds: 21600
    recreateParams:
      timeoutSeconds: 600
    resources: {}
    type: Recreate
  template:
    metadata:
      annotations:
        openshift.io/generated-by: OpenShiftNewApp
      creationTimestamp: null
      labels:
        app: southerncoalition
        deploymentconfig: southerncoalition
    spec:
      containers:
        - imagePullPolicy: Always
          name: southerncoalition
          ports:
            - containerPort: 8080
              name: http
              protocol: TCP
            - containerPort: 8081
              name: cluster
              protocol: TCP
            - containerPort: 9779
              name: prometheus
              protocol: TCP
            - containerPort: 8778
              name: jolokia
              protocol: TCP
          resources:
            limits:
              memory: 1000Mi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          volumeMounts:
            - mountPath: /opt/keystore
              name: volume-keystore
              readOnly: true
          env:
            - name: authRealm
              valueFrom:
                secretKeyRef:
                  key: authRealm
                  name: southerncoalition-secret
            - name: authResource
              valueFrom:
                secretKeyRef:
                  key: authResource
                  name: southerncoalition-secret
            - name: authSecret
              valueFrom:
                secretKeyRef:
                  key: authSecret
                  name: southerncoalition-secret
            - name: authUrl
              valueFrom:
                secretKeyRef:
                  key: authUrl
                  name: southerncoalition-secret

            - name: emailAuth
              valueFrom:
                secretKeyRef:
                  key: emailAuth
                  name: southerncoalition-secret
            - name: emailFrom
              valueFrom:
                secretKeyRef:
                  key: emailFrom
                  name: southerncoalition-secret
            - name: emailHost
              valueFrom:
                secretKeyRef:
                  key: emailHost
                  name: southerncoalition-secret
            - name: emailPassword
              valueFrom:
                secretKeyRef:
                  key: emailPassword
                  name: southerncoalition-secret
            - name: emailPort
              valueFrom:
                secretKeyRef:
                  key: emailPort
                  name: southerncoalition-secret
            - name: emailSsl
              valueFrom:
                secretKeyRef:
                  key: emailSsl
                  name: southerncoalition-secret
            - name: emailUsername
              valueFrom:
                secretKeyRef:
                  key: emailUsername
                  name: southerncoalition-secret
            - name: jdbcHost
              valueFrom:
                secretKeyRef:
                  key: jdbcHost
                  name: southerncoalition-secret
            - name: jdbcPort
              valueFrom:
                secretKeyRef:
                  key: jdbcPort
                  name: southerncoalition-secret
            - name: jdbcDatabase
              valueFrom:
                secretKeyRef:
                  key: jdbcDatabase
                  name: southerncoalition-secret
            - name: jdbcUsername
              valueFrom:
                secretKeyRef:
                  key: jdbcUsername
                  name: southerncoalition-secret
            - name: jdbcPassword
              valueFrom:
                secretKeyRef:
                  key: jdbcPassword
                  name: southerncoalition-secret
            - name: sslAlias
              valueFrom:
                secretKeyRef:
                  key: sslAlias
                  name: southerncoalition-secret
            - name: sslJksPassword
              valueFrom:
                secretKeyRef:
                  key: sslJksPassword
                  name: southerncoalition-secret
            - name: sslJksPath
              valueFrom:
                secretKeyRef:
                  key: sslJksPath
                  name: southerncoalition-secret
            - name: sslKeystorePath
              valueFrom:
                secretKeyRef:
                  key: sslKeystorePath
                  name: southerncoalition-secret
            - name: openshiftService
              value: "southerncoalition"
            - name: clusterPort
              value: "8081"
            - name: zookeeperHostName
              value: "{{ZOOKEEPER_HOST_NAME}}"
            - name: zookeeperPort
              value: "{{ZOOKEEPER_PORT}}"
            - name: solrHostName
              value: "{{SOLR_HOST_NAME}}"
            - name: solrPort
              value: "{{SOLR_PORT}}"
            - name: solrUrl
              value: "http://{{SOLR_HOST_NAME}}:{{SOLR_PORT}}/solr/{{SOUTHERNCOALITION_SOLR_COLLECTION}}"
            - name: siteHostName
              value: "{{SOUTHERNCOALITION_SITE_HOST_NAME}}"
            - name: sitePort
              value: "{{SOUTHERNCOALITION_SITE_PORT}}"
            - name: siteBaseUrl
              value: "{{SOUTHERNCOALITION_SITE_BASE_URL_ENUS}}"
            - name: numberExecutors
              value: "{{SOUTHERNCOALITION_NUMBER_EXECUTORS}}"
            - name: staticBaseUrl
              value: "{{SOUTHERNCOALITION_STATIC_BASE_URL}}"
            - name: siteZone
              value: "{{SOUTHERNCOALITION_SITE_ZONE}}"
            - name: JAVA_MAIN_CLASS
              value: "{{SOUTHERNCOALITION_JAVA_MAIN_CLASS_ENUS}}"
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      securityContext: {}
      terminationGracePeriodSeconds: 30
      volumes:
        - name: volume-keystore
          secret:
            defaultMode: 420
            secretName: southerncoalition-keystore
  test: false
  triggers:
    - imageChangeParams:
        automatic: true
        containerNames:
          - southerncoalition
        from:
          kind: ImageStreamTag
          name: 'southerncoalition:latest'
          namespace: {{SOUTHERNCOALITION_NAMESPACE}}
      type: ImageChange
    - type: ConfigChange

