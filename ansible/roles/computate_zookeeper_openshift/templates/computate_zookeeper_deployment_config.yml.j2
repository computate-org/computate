apiVersion: apps.openshift.io/v1
kind: DeploymentConfig
spec:
  replicas: 1
  revisionHistoryLimit: 10
  selector:
    app: computate-zookeeper
    deploymentConfig: computate-zookeeper
    deploymentconfig: computate-zookeeper
  strategy:
    activeDeadlineSeconds: 21600
    recreateParams:
      timeoutSeconds: 600
    resources: {}
    rollingParams:
      intervalSeconds: 1
      maxSurge: 25%
      maxUnavailable: 25%
      timeoutSeconds: 600
      updatePeriodSeconds: 1
    type: Recreate
  template:
    metadata:
      annotations:
        openshift.io/generated-by: OpenShiftNewApp
      creationTimestamp: null
      labels:
        app: computate-zookeeper
        application: computate-zookeeper
        deploymentConfig: computate-zookeeper
        deploymentconfig: computate-zookeeper
      name: computate-zookeeper
    spec:
      containers:
        - imagePullPolicy: Always
          name: computate-zookeeper
          ports:
            - containerPort: {{ZOOKEEPER_PORT}}
              name: client-port
              protocol: TCP
          resources:
            limits:
              memory: 256Mi
          securityContext:
            privileged: false
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          volumeMounts:
            - mountPath: /opt/zookeeper/data
              name: volume-computate-zookeeper-data
            - mountPath: /opt/zookeeper/conf
              name: volume-computate-zookeeper-conf
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      securityContext: {}
      terminationGracePeriodSeconds: 30
      volumes:
        - name: volume-computate-zookeeper-data
          persistentVolumeClaim:
            claimName: computate-zookeeper-persistent-volume-claim
        - configMap:
            defaultMode: 440
            name: computate-zookeeper-configmap
          name: volume-computate-zookeeper-conf
  test: false
  triggers:
    - imageChangeParams:
        automatic: true
        containerNames:
          - computate-zookeeper
        from:
          kind: ImageStreamTag
          name: 'computate-zookeeper-image-stream:latest'
          namespace: {{ZOOKEEPER_NAMESPACE}}
      type: ImageChange
    - type: ConfigChange

