[Unit]
Description=Watch the computate app and generate Java code when the Java source files are modified. 
After=network.target

[Service]
Type=simple
User={{USER_NAME}}
Group={{USER_NAME}}
WorkingDirectory={{OPENDATAPOLICING_SRC}}
Environment=appName={{OPENDATAPOLICING_NAME}}
Environment=appPath={{OPENDATAPOLICING_SRC}}
Environment=appComputatePath={{COMPUTATE_SRC}}
Environment=lang={{OPENDATAPOLICING_LANG}}
ExecStart={{COMPUTATE_SRC}}/bin/enUS/watch.sh
LimitNOFILE=65000
LimitNPROC=65000
LimitNOFILE=infinity
LimitMEMLOCK=infinity
Restart=on-failure

[Install]
WantedBy=multi-user.target

